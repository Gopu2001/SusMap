<?xml version='1.0' encoding='utf-8'?>
<widget id="io.apro.susmap" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SusMap</name>
    <description>A Map to show all the Sustainability Features of UC Merced</description>
    <author email="akapoor3@ucmerced.edu" href="https://github.com/Apro123/SusMap">Armaan Kapoor</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>Enable Location access to see where you are and other sustainability features near you</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysAndWhenInUseUsageDescription">
        <string>Enable Location access to see where you are and other sustainability features near you</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
        <string>Enable Location access to see where you are and other sustainability features near you</string>
    </edit-config>
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="FadeSplashScreenDuration" value="750" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="assets/images/Sustainability_logo.png" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="SplashScreenWidth" value="300" />
    <preference name="SplashScreenHeight" value="88" />
    <preference name="ErrorUrl" value="404.html" />
</widget>
